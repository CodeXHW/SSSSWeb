<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 告诉Struts框架，Action 类对象由spring来管理 -->
	<constant name="struts.objectFactory" value="spring"></constant>
    <package name="default" namespace="/" extends="struts-default">
		
		<global-results>
			<result name="failure">/failure.jsp</result>
		</global-results>
     	
     	<action name="select" class="DepartSelectAction" method="SelectDepart">
     		<result name="select">/selectDepart.jsp</result>
     	</action>
       
        <action name="select-update" class="DepartSelectAction" method="SelectUpdate">
     		<result name="select-update">/editDepart.jsp</result>
     	</action>
     	
     	<action name="edit" class="DepartEditAction" method="EditDepart">
     		<result name="edit">/selectDepart.jsp</result>
     	</action>
     	
     	<action name="add" class="DepartAddAction" method="AddDepart">
     		<result name="add">/selectDepart.jsp</result>
     	</action>
       
       <action name="delete" class="DepartDeleteAction" method="DeleteDepart">
     		<result name="delete">/selectDepart.jsp</result>
     	</action>
       
    </package>

</struts>












